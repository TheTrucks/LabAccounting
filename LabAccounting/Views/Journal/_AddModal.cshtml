@model LabAccounting.Models.SampleAddMetaModel
@Html.Hidden("Units", Json.Encode(Model.Units))
@Html.Hidden("Classes", Json.Encode(Model.Classes))
<div class="modal-sample-row">
    <div class="form-group">
        <label><b>Категория вещества:</b></label>
        @foreach (var Cat in Model.Categories)
        {
            <div class="radio">
                <label>
                    <input type="radio" name="optCategories" value="@Cat.Id" />
                    @Cat.Description
                </label>
            </div>
        }
    </div>
</div>
<div class="modal-sample-row">
    <div class="form-group">
        <label><b>Агрегатное состояние:</b></label>
        @foreach (var Aggr in Model.AggrStates)
        {
            <div class="radio">
                <label>
                    <input type="radio" name="optAggrs" value="@Aggr.Id" />
                    @Aggr.Description
                </label>
            </div>
        }
    </div>
</div>
<div class="modal-sample-row">
    <div class="form-group">
        <label for="SampleAddName"><b>Наименование:</b></label>
        <input type="text" id="SampleAddName" class="form-control" autocomplete="off">
    </div>
</div>
<div class="modal-sample-row">
    <div class="form-group">
        <label><b>Отметка прекурсора:</b></label>
        <div class="checkbox">
            <label>
                <input type="checkbox" name="optPrecursor" id="SampleAddPrecursor">
                Прекурсор
            </label>
        </div>
    </div>
</div>
<div class="modal-sample-row">
    <div class="form-group">
        <label><b>Классификация:</b></label>
        <select id="SampleAddClass" class="form-control">
            @foreach (var Class in Model.Classes)
            {
                <option value="@Class.Id">@Class.ShortName</option>
            }
        </select>
    </div>
</div>
<div class="modal-sample-row">
    <div class="form-group">
        <label><b>Единица измерения по умолчанию:</b></label>
        <select id="SampleAddDefUnit" class="form-control">
            @foreach (var DefUnit in Model.Units)
            {
                <option value="@DefUnit.Id">@DefUnit.ShortName</option>
            }
        </select>
    </div>
</div>
<div class="modal-sample-row">
    <div class="form-group">
        <label for="SampleAddStdNum"><b>Номер стандарта:</b></label>
        <input type="text" id="SampleAddStdNum" class="form-control" autocomplete="off">
    </div>
</div>
<div class="modal-sample-row">
    <div class="form-group">
        <label for="SampleAddStdInfo"><b>Реквизиты методики испытания:</b></label>
        <input type="text" id="SampleAddStdInfo" class="form-control" autocomplete="off">
    </div>
</div>
<div class="modal-sample-row">
    <div class="form-group">
        <label for="SampleAddQuantity"><b>Количество вещества:</b></label>
        <input type="text" id="SampleAddQuantity" class="form-control" autocomplete="off">
    </div>
</div>
<div class="modal-sample-row">
    <div class="form-group">
        <label for="SampleAddComment"><b>Примечание:</b></label>
        <input type="text" id="SampleAddComment" class="form-control" autocomplete="off">
    </div>
</div>
<div class="modal-sample-row">
    <div class="form-group">
        <label for="SampleAddSupplier"><b>Поставщик:</b></label>
        <input type="text" id="SampleAddSupplier" class="form-control" autocomplete="off">
    </div>
</div>
<div class="modal-sample-row">
    <div class="form-group">
        <label for="SampleAddWaybill"><b>Номер договора и товарной накладной:</b></label>
        <input type="text" id="SampleAddWaybill" class="form-control" autocomplete="off">
    </div>
</div>
<div class="modal-sample-row">
    <div class="form-group">
        <label for="SampleAddWaybillDate"><b>Дата договора и товарной накладной:</b></label>
        <input type="text" id="SampleAddWaybillDate" class="form-control datepicker" autocomplete="off">
    </div>
</div>
<div class="modal-sample-row">
    <div class="form-group">
        <label for="SampleAddBatchNumber"><b>Номер партии:</b></label>
        <input type="text" id="SampleAddBatchNumber" class="form-control" autocomplete="off">
    </div>
</div>
<div class="modal-sample-row">
    <div class="form-group">
        <label for="SampleAddDateReceived"><b>Дата поступления:</b></label>
        <input type="text" id="SampleAddDateReceived" class="form-control datepicker" autocomplete="off">
    </div>
</div>
<div class="modal-sample-row">
    <div class="form-group">
        <label for="SampleAddDateCreated"><b>Дата изготовления:</b></label>
        <input type="text" id="SampleAddDateCreated" class="form-control datepicker" autocomplete="off">
    </div>
</div>
<div class="modal-sample-row">
    <div class="form-group">
        <label for="SampleAddDateExpiration"><b>Дата окончания срока годности:</b></label>
        <input type="text" id="SampleAddDateExpiration" class="form-control datepicker" autocomplete="off">
    </div>
</div>